@model ForumProject.Models.Post

@{
    ViewData["Title"] = "Create Post";
}

<h2>Create a New Post</h2>

<form method="post" asp-controller="Post" asp-action="Create">
    <div class="mb-3">
        <label for="Title" class="form-label">Title:</label>
        <input type="text" id="Title" name="Title" class="form-control" value="@Model?.Title" required />
    </div>

    <div class="mb-3">
        <label for="Content" class="form-label">Content:</label>
        <textarea id="Content" name="Content" class="form-control" rows="5" required>@Model?.Content</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create Post</button>
</form>

<a asp-controller="Post" asp-action="Index" class="btn btn-secondary mt-3">Back to Posts</a>
