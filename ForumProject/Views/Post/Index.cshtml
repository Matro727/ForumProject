@model IEnumerable<ForumProject.Models.Post>

<h1>All Posts</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>
                    <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Post" asp-action="Create" class="btn btn-primary">Create New Post</a>
